<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="StandUpTimer.App">


    <Application.Styles>
        <StyleInclude Source="/Themes/Fluent.axaml"></StyleInclude>
    </Application.Styles>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="Assets/desk.ico"
                      ToolTipText="Щелкните, чтобы открыть окно параметров"
                      Command="{Binding OpenMainWindowCommand}">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Открыть окно"
                                        Command="{Binding OpenMainWindowCommand}" />

                        <NativeMenuItemSeparator />

                        <NativeMenuItem Header="Выход" Command="{Binding ExitCommand}" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>